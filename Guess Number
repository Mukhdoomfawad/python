import random
import time

leaderboard = []

def get_hint(number):
    return f"Hint: The number is {'even' if number % 2 == 0 else 'odd'}."

def play_game():
    print("ðŸŽ® Welcome to the Guess Number Game")
    print("Select Difficulty Level:")
    print("1. Easy (1â€“10)")
    print("2. Medium (1â€“20)")
    print("3. Hard (1â€“30)")

    choice = input("Enter 1, 2, or 3: ")
    if choice == '1':
        max_number = 10
        attempts = 6
    elif choice == '2':
        max_number = 20
        attempts = 5
    elif choice == '3':
        max_number = 30
        attempts = 5
    else:
        print("Invalid choice. Defaulting to Easy.")
        max_number = 10
        attempts = 6

    number = random.randint(1, max_number)
    guess_taken = 0
    score = 0
    start_time = time.time()

    print(f"\nI'm thinking of a number between 1 and {max_number}. You have {attempts} attempts.")
    print(get_hint(number))

    while guess_taken < attempts:
        guess = input("Enter your guess (or 'quit' to exit): ")
        if guess.lower() == "quit":
            return

        if not guess.isdigit():
            print("âš ï¸ Enter a valid number.")
            continue

        guess_taken += 1
        guess_num = int(guess)

        if guess_num > number:
            print("ðŸ“ˆ Too high!")
        elif guess_num < number:
            print("ðŸ“‰ Too low!")
        else:
            score = (attempts - guess_taken + 1) * 10  # Higher score for fewer attempts
            print(f"ðŸŽ‰ Correct! You guessed the number {number} in {guess_taken} tries.")
            print(f"ðŸ† Score this round: {score}")
            break

        remaining = attempts - guess_taken
        print(f"ðŸ”„ Attempts left: {remaining}")
        print(get_hint(number))

    if guess_taken == attempts and guess_num != number:
        print(f"âŒ Game Over. The number was {number}. No points this round.")

    end_time = time.time()
    duration = round(end_time - start_time, 2)

    # Track player info
    name = input("Enter your name for leaderboard: ")
    leaderboard.append({
        "name": name,
        "score": score,
        "time": duration,
        "attempts": guess_taken
    })

def show_leaderboard():
    print("\nðŸ“Š Leaderboard:")
    sorted_board = sorted(leaderboard, key=lambda x: (-x['score'], x['time']))
    for i, entry in enumerate(sorted_board, start=1):
        print(f"{i}. {entry['name']} - Score: {entry['score']}, Time: {entry['time']}s, Attempts: {entry['attempts']}")

while True:
    play_game()
    again = input("Play again? (yes/no/view leaderboard): ").lower()
    if again == 'view leaderboard':
        show_leaderboard()
    elif again != 'yes':
        print("ðŸ‘‹ Thanks for playing. Goodbye!")
        break
